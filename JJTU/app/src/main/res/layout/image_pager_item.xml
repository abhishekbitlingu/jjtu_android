<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView android:id="@+id/about_us_imageView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <TextView
        android:id="@+id/about_us_image_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/about_us_image_title_container_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/about_us_image_title_background_gradient"
        android:gravity="bottom"
        android:padding="@dimen/about_us_image_title_container_padding"
        android:textColor="@color/titleColorWhite"
        android:textSize="@dimen/about_us_image_title_text_size"
        android:textStyle="bold" />
</RelativeLayout>