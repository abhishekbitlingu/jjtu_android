<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neeladri.jjtu.fragments.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/about_us_image_height">

            <ImageView
                android:id="@+id/about_us_imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/about_us_image_height"
                android:contentDescription="@string/navigation_header_main_jjtu_title"
                android:src="@drawable/jjtu_university" />

            <TextView
                android:id="@+id/about_us_image_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/about_us_image_title_container_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/about_us_image_title_background_gradient"
                android:gravity="bottom"
                android:padding="@dimen/about_us_image_title_container_padding"
                android:text="@string/navigation_header_main_jjtu_title"
                android:textColor="@color/titleColorWhite"
                android:textSize="@dimen/about_us_image_title_text_size"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/about_us_body_container_top_margin"
            android:lineSpacingExtra="@dimen/about_us_body_line_spacing"
            android:padding="@dimen/about_us_body_container_padding"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@string/about_us_body" />
    </LinearLayout>
</ScrollView>
